<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.aleks.lab2.MainActivity">

    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/miasto"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zabrze"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_wb_sunny_black_24dp"
            android:layout_gravity="center"
            />
        <TextView
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30 stopni celcjusza"
            android:layout_gravity="center"
            />
        <TextView
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pamietaj o filtrze"
            android:layout_gravity="center"
            />
        <TextView
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Podaj miejsce"
            android:textColorLink="@color/colorPrimary"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn1"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="ZMIEŃ MIEJSCE"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/btn"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"


            android:text="POKAŻ LISTĘ DOSTĘPNYCH MIEJSC"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
